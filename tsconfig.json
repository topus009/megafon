{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./public/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "strictNullChecks": true,
        "lib": ["es6", "dom"],
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
      },
    // "include": [
    //     "./src/**/*"
    // ],
    "exclude": [
        "node_modules",
        "public",
        "webpack",
        "server.js"
      ],
}
